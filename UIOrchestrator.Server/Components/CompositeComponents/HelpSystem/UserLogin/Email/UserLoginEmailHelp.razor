@namespace Code420.UIOrchestrator.Server.Components.CompositeComponents.HelpSystem.UserLogin.Email

@using Code420.UIOrchestrator.Server.Components.CompositeComponents.HelpButton;
@using Code420.UIOrchestrator.Server.Components.BaseComponents.ButtonBase;
@using Code420.UIOrchestrator.Server.Components.CompositeComponents.HelpDialog;
@using Syncfusion.Blazor.Popups

<!--suppress ALL -->
<HelpButton @ref=helpButtonComponent
            CssClass="user-login-email-help"
            ButtonMargin="2.5em 0 0 1em"
            TooltipHeight="auto"
            TooltipWidth="250px"
            >
    
    <TooltipContent>
        @*
        The HelpButton component provides basic styling for its ToolTipBase child component.
        As needed, additional styling can be provided in-line within the TooltipContent
        property. Using <style> tags will work too as long as you manage CSS isolation
        issues appropriately.
        *@
        <div class="user-login-email-help__tooltip-content"
             style="font-size: 12px; 
             color: var(--tooltip-help__title-font-color);
             margin: 1em;">
            <p style="font-size: 14px; 
                color: var(--tooltip-help__body-font-color);">
                <b>Enter the Email Assigned to Your Account.</b>
            </p>
            <div class="user-login-email-help__button" style="display: flex; margin-top: 1em;">
                <ButtonBase @ref=buttonLearnMore
                            IsPrimary=true
                            TextFontSize="1em"
                            CssClass="user-login-email-help__button-learn-more"
                            Padding="4px 8px"
                            Margin="auto"
                            OnClick=LearnMoreButtonClickAsync
                >
                    <ContentFragment>
                        Learn More
                    </ContentFragment>
                </ButtonBase>
            </div>
        </div>
    </TooltipContent>
    
</HelpButton>

<HelpDialog @ref=dialogLearnMore
            Target=".page__main"
            >
    <HeaderFragment>
        User Email Help
    </HeaderFragment>
    <ContentFragment>
        <div class="content__user-login-email-help">
                <article class="card__user-login-email-help">
                    <h3 class="card-title__user-login-email-help">
                        Overview
                    </h3>
                    <p>
                        Enter the email used to register your account. The email
                        must be valid or an error message will be displayed.
                    </p>
                </article>
                <article class="card__user-login-email-help">
                    <h3 class="card-title__user-login-email-help">Best Practice</h3>
                    <p>
                        For this demo, two email addresses are defined. Each has different
                        permission sets assigned. Any email address other than the predefined
                        ones will be assigned a limited permission set.
                    </p>
                </article>
                <article class="card__user-login-email-help">
                    <h3 class="card-title__user-login-email-help">Predefined Email Addresses</h3>
                    <article class="card-section__user-login-email-help">
                        <h3 class="card-section-title__user-login-email-help">accessall@test.com</h3>
                        <p>
                            Granted the AccessAll permission set which exposes all menu items.
                        </p>
                    </article>
                    <article class="card-section__user-login-email-help">
                        <h3 class="card-section-title__user-login-email-help">permission1@test.com</h3>
                        <p>
                            Granted the Permission_1 permission set which exposes the following menu items:
                        </p>
                        <ul style="margin-bottom:0;">
                            <li>Dummy Tab</li>
                            <li>Settings->Configuration->Application</li>
                            <li>Settings->User->Logout</li>
                            <li>Settings->Switch Theme->Light</li>
                            <li>Settings->Switch Theme->Dark</li>
                        </ul>
                    </article>
                    <article class="card-section__user-login-email-help">
                        <h3 class="card-section-title__user-login-email-help">Any other email address</h3>
                        <p>
                            Granted the Permission_2 permission set which exposes the following menu items:
                        </p>
                        <ul style="margin-bottom:0;">
                            <li>Dummy Tab</li>
                            <li>Settings->User->Logout</li>
                            <li>Settings->Do Nothing</li>
                        </ul>
                    </article>
                </article>
        </div>
    </ContentFragment>
    <FooterFragment>
        <div class="footer__user-login-email-help" style="height: 1em;">
        </div>
    </FooterFragment>

</HelpDialog>


<style>

    p {
        line-height: 1.1;
        color: black;
        margin-bottom: 0;
    }

    .card__user-login-email-help {
        padding: 0.75em 1em;
        background-color: var(--dialog-help__background-color);
    }

    .card-title__user-login-email-help {
        display: flex;
        align-items: flex-start;
        text-align: left;
        font-size: 1.25em;
        font-weight: 600;
        color: var(--dialog-help__title-font-color);
        margin-bottom: 0.5em;
    }

    .card-title__user-login-email-help::after {
        content: "";
        flex-grow: 1;
        height: 1px;
        background: var(--dialog-help__title-font-color);
        min-width: 20px;
        margin: auto auto auto 0.5em;
    }

    .card__user-login-email-help p {
        font-size: 1em;
    }

    .card-section__user-login-email-help {
        padding: 0 1em 0.75em 1em;
        background-color: var(--dialog-help__background-color);
    }

    .card-section-title__user-login-email-help {
        display: flex;
        align-items: flex-start;
        text-align: left;
        font-size: 1.1em;
        font-weight: 600;
        color: var(--dialog-help__subtitle-font-color);
    }

    .card-section-title__user-login-email-help::after {
        content: "";
        flex-grow: 1;
        height: 1px;
        background: var(--dialog-help__subtitle-font-color);
        min-width: 20px;
        margin: auto auto auto 0.5em;
    }

    .card-section__user-login-email-help p {
        font-size: 1em;
    }

</style>