@namespace Code420.UIOrchestrator.Server.Components.BaseComponents.TextBoxBase

@using Syncfusion.Blazor.Inputs

<SfTextBox  @ref=@sfTextBox
            Autocomplete=@Autocomplete
            Enabled=@Enabled
            EnablePersistence=@EnablePersistence
            EnableRtl=@EnableRtl
            FloatLabelType=@FloatLabelType
            Multiline=@Multiline
            Placeholder=@Placeholder
            Readonly=@ReadOnly
            ShowClearButton=@ShowClearButton
            TabIndex=@TabIndex
            Type=@Type
            ValidateOnInput=@ValidateOnInput
            Value=@Value
            
            Blur=@Blur
            Created=@Created
            Destroyed=@Destroyed
            Focus=@Focus
            Input=@Input
            ValueChange=@ValueChangeHandler
           
            CssClass=@CssClass
            ID=@CssId
            HtmlAttributes=@HtmlAttributes
            InputAttributes=@InputAttributes
            Width=@Width
            />


<style>

    @* Set the styling for the Textbox div *@
    @(masterCssSelector).e-input-group {
        background-color: @TextboxBackgroundColor;
        color: @TextboxFontColor;
        border: @TextboxBorderWidth;
        border-style: solid;
        border-color: @TextboxBorderColor;
        border-radius: @TextboxBorderRadius;
    }

     @* Set the styling for the Textbox div when hovered *@
    @(masterCssSelector).e-input-group:hover:not(.e-disabled) {
        border-width: @TextboxBorderWidth;
    }

    @* Set the styling for the font in the Textbox div *@
    @(masterCssSelector).e-float-input {
        font-size: @TextboxFontSize;
        font-weight: @TextboxFontWeight;
        line-height: @TextboxLineHeight;
        margin: @TextboxMargin;
        padding-top: @TextboxPaddingTop;
    }

    @* Set the styling for the Textbox div when not in error mode *@
    @(masterCssSelector).e-input-group:not(.e-success):not(.e-warning):not(.e-error) {
        border-color: @TextboxBorderColor;
        background-color: @TextboxBackgroundColor;
        color: @TextboxFontColor;
    }

    @*
    Set the styling of the Masked Textbox div when active
    (not disabled, not success, not warning, not error)
    *@
    @(masterCssSelector).e-input-group:not(.e-disabled):active:not(.e-success):not(.e-warning):not(.e-error),
    @(masterCssSelector).e-input-group:not(.e-disabled):not(.e-success):not(.e-warning):not(.e-error).e-input-focus {
        border-color: @TextboxActiveBorderColor;
        box-shadow: 0 0 0 3px @boxShadowRgba;
    }

    @* Set the styling for the font in the Masked Textbox input element *@
    @(masterCssSelector).e-float-input input{
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        background: none;
        color: inherit;
        padding-left: @TextboxPaddingLeft;
        text-indent: @TextboxTextIndent;
        box-sizing: border-box;
        height: @Height;
    }

    @* Set the styling for the clear button *@
    @(masterCssSelector).e-float-input .e-clear-icon {
        padding: @ClearButtonPadding;
        color: @ClearButtonIconColor;
        min-height: 0;
        min-width: @ClearButtonMinimumWidth;
        background-color: @ClearButtonIconBackgroundColor;
    }

    @* Set the styling for the clear button's icon *@
    @(masterCssSelector).e-float-input .e-clear-icon::before {
        font-size: @ClearButtonIconSize;
        padding: 0;
        text-align: center;
    }

    @* Set styling for placeholder text when not floating *@
    @(masterCssSelector).e-float-input:not(.e-error) input:not(:focus):valid ~ label.e-float-text.e-label-bottom,
    @(masterCssSelector).e-input-group input.e-input::placeholder {
        color: @PlaceholderNormalColor;
        font-size: @PlaceholderFontSize;
        font-weight: @PlaceholderFontWeight;
    } 
    
    @* Set styling for placeholder text when floating *@
    @(masterCssSelector).e-float-input:not(.e-error) input:focus ~ label.e-float-text.e-label-top,
    @(masterCssSelector).e-float-input:not(.e-error) input:not(:focus) ~ label.e-float-text.e-label-top {
        color: @PlaceholderFloatingColor;
        font-size: @PlaceholderFloatingFontSize;
        font-weight: @PlaceholderFloatingFontWeight;
    }

</style>